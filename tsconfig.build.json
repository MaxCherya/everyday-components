{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "moduleResolution": "Node",
        "jsx": "react-jsx",
        "declaration": true,
        "declarationDir": "dist",
        "outDir": "dist",
        "emitDeclarationOnly": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src"
    ]
}